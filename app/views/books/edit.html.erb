<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>Edit</title>
  </head>

  <body>

    <h1>Editing Book</h1>
    <%= notice %>
    <%= alert %>
        <%= form_with model: @book, url:"/books/#{@book.id}/edit", local:true do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Body</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Update Book' %>
        <% end %>
    <%= link_to "Show |", "/books/#{@book.id}" %>
    <%= link_to "Back", "/books" %>
  </body>
</html>